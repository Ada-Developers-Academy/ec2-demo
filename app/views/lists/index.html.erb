<ul>
  <% @people.each_with_index do |person, i| %>
    <li>
      <%= i + 1 %>. <%= person.name %>
      <%= link_to "x", "", class: "delete btn btn-danger", data: {id: person.id} %>
    </li>
  <% end %>
</ul>
<hr>
<h2>Wanna be on the list?</h2>
<%= form_for @person do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class: "" %>
  </div>

  <%= f.submit "Add me to the List", class: "btn btn-success" %>
<% end %>
